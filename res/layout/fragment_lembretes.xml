<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/lembretes_header"
        style="@style/header_text_tela_principal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lembrete_header" />

    <ListView
        android:id="@+id/lembretes_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:stackFromBottom="false" />

    <Button
        android:id="@+id/agendamentos_header"
        style="@style/header_text_tela_principal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/agendamento_header"/>

    <ListView
        android:id="@+id/agendamentos_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:stackFromBottom="false" />

</LinearLayout>